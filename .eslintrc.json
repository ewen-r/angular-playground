{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "standard"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "semi": ["error", "always"],
    "padded-blocks": ["off", {"blocks": "never"} ],
    "no-useless-constructor": "off",
    "no-multiple-empty-lines": ["error", { "max" : 2 }],
    "space-before-function-paren": ["error", "never"]
  }
}
